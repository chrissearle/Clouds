- content_for :head do
  %script{ :type => 'text/javascript',
           :src => js_map_url }
  = javascript_include_tag 'StyledMarker'

.container-fluid
  .row
    .col-md-3.scrollable
      .point
        = form_for @point do |f|
          = f.hidden_field :latitude
          = f.hidden_field :longitude

          .form-group
            = f.label :name, :class => 'control-label'
            = f.text_field :name, :class => 'form-control'

          = f.label :email do
            = f.check_box :privacy_flag, :class => 'form-control'
            Public location?
            
          .form-group
            %p Move the marker on the map to change the location

          .form-group
            = f.submit 'Save', :class => 'btn btn-primary'
            = link_to 'Delete', @point, method: :delete, :class => 'btn btn-danger'

    #map.col-md-9{ :data => { :singlepointpath => point_url(@point, :format => :json) }}
