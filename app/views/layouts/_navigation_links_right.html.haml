- if current_user
  %li.divider-vertical
  %li.dropdown
    %a.dropdown-toggle{ :href => "#", :data => { :toggle => 'dropdown' } }
      = link_with_icon( 'user', 'Account', true)
      %b.caret
    %ul.dropdown-menu
      %li= link_to 'My Profile', login_path
